@page
@model Proiect_Nagy_Cristina.Pages.Doctors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Doctor.ID" />
            <div class="form-group">
                <label asp-for="Doctor.Code" class="control-label"></label>
                <input asp-for="Doctor.Code" class="form-control" />
                <span asp-validation-for="Doctor.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.FirstName" class="control-label"></label>
                <input asp-for="Doctor.FirstName" class="form-control" />
                <span asp-validation-for="Doctor.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.LastName" class="control-label"></label>
                <input asp-for="Doctor.LastName" class="form-control" />
                <span asp-validation-for="Doctor.LastName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Doctor.Available" /> @Html.DisplayNameFor(model => model.Doctor.Available)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Type" class="control-label"></label>
                <input asp-for="Doctor.Type" class="form-control" />
                <span asp-validation-for="Doctor.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
